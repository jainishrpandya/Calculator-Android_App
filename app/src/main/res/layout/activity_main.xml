<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:orientation="vertical"
    tools:ignore="HardcodedText,MissingPrefix"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/actionBarPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/workingTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:backgroundTint="@null"
                app:icon="@drawable/ic_baseline_arrow_back_ios_242"
                android:onClick="CloseTheApp"
                app:iconTint="@color/white" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textAllCaps="false"
                tools:ignore="TextContrastCheck" />

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:backgroundTint="@null"
                android:gravity="end"
                app:icon="@drawable/ic_baseline_menu_24"
                app:iconTint="@color/white" />

        </LinearLayout>
        <TextView
            android:id="@+id/workingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text=""
            android:maxLines="2"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="45sp"
            android:padding="2sp"
            app:layout_constraintBottom_toTopOf="@+id/resultTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionBarPanel"
            android:fontFamily="@font/sfregular" />
        <TextView
            android:id="@+id/resultTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text="0"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="60sp"
            android:padding="2sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/sflight" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonTransform"
            android:id="@+id/btn_history"

            android:text="⇅" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/btn_percentage"
            android:text="%"/>
        <Button
            style="@style/buttonOperator"
            android:text="/" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/clearButton"
            android:onClick="backSpaceAction"
            android:textSize="20sp"
            android:text="⌫" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_7"
            android:text="7" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_8"
            android:text="8" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_9"
            android:text="9" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/btn_multiply"
            android:text="*" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_4"
            android:text="4" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_5"
            android:text="5" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_6"
            android:text="6" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/btn_minus"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_3"
            android:text="3" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_2"
            android:text="2" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_1"
            android:text="1" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/btn_plus"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumberZero"
            android:id="@+id/btn_0"
            android:text="0" />
        <Button
            style="@style/buttonNumber"
            android:id="@+id/btn_dot"
            android:text="." />

        <Button
            style="@style/buttonOperatorEqualTo"
            android:id="@+id/btn_equal"
            android:text="="
            />
    </LinearLayout>

</LinearLayout>